doctype html
html(lang="en" data-theme="dark")
    head
        // WindyPug - Node.js + Pug + TailwindCSS + DaisyUI Boilerplate
        // by Berian Lowe (github.com/BerianL)

        block meta
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            meta(charset="UTF-8")
            meta(name="description", content="WindyPug - Node.js + Pug + TailwindCSS + DaisyUI Boilerplate")
            meta(name="author", content="Berian Lowe (github.com/BerianL)")
            meta(name="keywords", content="node.js, pug, tailwindcss, daisyui, boilerplate, template, starter, express.js, web development")

        block headTitle
            title WindyPug - Node.js + Pug + TailwindCSS + DaisyUI Boilerplate

        block favicons
            link(rel="apple-touch-icon", sizes="180x180", href="images/icons/apple-touch-icon.png")
            link(rel="icon", type="image/png", sizes="32x32", href="images/icons/favicon-32x32.png")
            link(rel="icon", type="image/png", sizes="16x16", href="images/icons/favicon-16x16.png")
            link(rel="manifest", href="images/icons/site.webmanifest")
            link(rel="mask-icon", href="images/icons/safari-pinned-tab.svg", color="#5bbad5")
            meta(name="msapplication-TileColor", content="#da532c")
            meta(name="theme-color", content="#ffffff")

        block localCSS
            link(rel='stylesheet', href='/css/styles.css')
            link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css')
    body
        block bodyContent
            include welcome.pug


        block localJS
            script(src='/js/scripts.js')